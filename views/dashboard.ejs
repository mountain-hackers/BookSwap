<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookSwap</title>
    <script
      src="https://kit.fontawesome.com/fb0123c498.js"
      crossorigin="anonymous"
    ></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <nav expand="lg" id="nav_bar">
      <div class="container">
        <div class="title" href="/home">
          <p>
            <i class="fa-solid fa-book"></i> BOOKSWAP</span>
          </p>
        </div>

        <input type="checkbox" name="check" id="check" />
        <label for="check" class="checkbtn"
          ><i class="fa-solid fa-bars"></i
        ></label>
        <ul class="firstNav">
          <li><a class="navitem" href="">Browse Books</a></li>

          <li><a class="navitem" href="/about">About</a></li>
          <li><a class="navitem" href="/">Contacts</a></li>
          
          <li>
            <a class="navitem" href="/"
              ><i class="fa-solid fa-cart-shopping"></i
            ></a>
          </li>
          <li><a class="navitem" href="/"> <img src="https://www.pngall.com/wp-content/uploads/5/User-Profile-Transparent.png" class="profile-img" alt=""> </a></li>
        </ul>
      </div>
    </nav>

  <!-- buy sell section -->

  <section id="buy-sec">
    <div class="container my-btn d-flex justify-content-center">
      <form action="/buybook" method="post">
        <button class="buy btn btn-hover color-9" href="/buybook"> <i class="fa-solid fa-bag-shopping"></i><br><br>
          Buy Book
       </button>
      </form>
      
        <form action="/sellbook" method="post">
          <button class="sell btn btn-hover color-9" type="submit"> <i class="fa-solid fa-upload"></i><br><br>

            Sell Book
                 </button>
        </form>
     
    </div>
  </section>
  </body>
</html>
